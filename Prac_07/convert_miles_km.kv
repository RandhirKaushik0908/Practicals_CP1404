
BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_value
            text: '0.0'
            font_size: 48
            multiline: False
            on_text: app.handle_calculations(input_value.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.change_value(input_value.text, 1)
            Button:
                text: 'Down'
                on_press: app.change_value(input_value.text, -1)
    #Button:
     #   text: 'Convert miles to km'
      #  on_press: app.handle_calculations(input_value.text)
    Label:
        text: app.output
        font_size: 48

